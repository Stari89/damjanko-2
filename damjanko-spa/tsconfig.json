{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "module": "es2020",
        "lib": ["es2018", "dom"],
        "paths": {
            "@core/*": ["src/app/core/*"],
            "@not-found/*": ["src/app/modules/not-found/*"],
            "@sign-in/*": ["src/app/modules/sign-in/*"]
        }
    }
}
